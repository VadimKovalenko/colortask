//Insert current color
db.getCollection('colortask_1').update(
    // query 
    {
        "_id" : ObjectId("582c8fb919920f07ec101157")
    },
    
    // update 
    {"$push" : 
        {"colors": 
            {"data":"green",
             "title":"For bold text",
             "descr":"Here is green description"}
         }
    },
    
    // options 
    {
        "multi" : false,  // update only one document 
        "upsert" : false  // insert a new document, if no existing document match the query 
    }
);

//Get current color
db.getCollection('colortask_1').find(
    // query 
    {
        "colors.color_id" : 1481054980182.0
    },
    {
        "_id" : ObjectId("58457d20e1e39c15f815a613"),
        "colors" : {$elemMatch: {"color_id" : 1481054980182.0}} 
    },
    
    // options 
    {
        "multi" : false,  // update only one document 
        "upsert" : false  // insert a new document, if no existing document match the query 
    }
);

